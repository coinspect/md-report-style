@require 'vars.styl'
@require 'finding.styl'
@require 'code.styl'
@require 'finding-list.styl'
@require 'finding-resume.styl'
@require 'report-header.styl'
@require 'mixins.styl'
@require 'toc.styl'


.report, .concert-doc
  font $default-font
  background white
  color black
  width 100%
  max-width 100%

  pre, code, p, span, div
    width auto
    max-width 100%
    overflow-wrap break-word

  p
    text-align justify

  table
    width 100%

    tr, th, td
      text-align center
      padding 0 0 $margin 0

  pre code
    monospacedText()
    white-space pre-wrap

  .finding, .data-block
    margin 1em 1em 5em 1em

  /* border-color gray
  border-style dashed none
  border-width 1px */
  *[data-value=none], *[data-value=low], *[data-value=medium], *[data-value=high]
    text-transform capitalize

  .error
    color error

  .table-of-contents
    tocStyle()

    page-break-after always

// set headers size
  for $hs, $hk in $h-sizes
    h{$hk+1}
      font-size $hs

  h2
    page-break-before always

  h2:first-of-type
    page-break-before auto
  
  .finding
    break-inside avoid

  h2+.finding
    break-inside auto !important

  .language-tech-bits
    font $monospace-font
    // text-align justify
    font-size 0.65em !important
    // white-space pre-wrap
    padding 0
    background none

  img
    max-width 100%
    margin auto
    display block
  

