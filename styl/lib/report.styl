@require 'vars.styl'
@require'finding.styl'
@require'code.styl'
@require'finding-list.styl'
@require'finding-resume.styl'
@require'report-header.styl'


.report
  font $default-font
  background white
  color black
  width 100%
  max-width 100%

  pre, code, p, span, div
    width auto
    max-width 100%
    overflow-wrap break-word
  
  table
    width 100%
    tr
    th,td
      text-align center
      padding 0 0 1em 0 

  code
    font $monospace-font
    font-size 0.8em
    white-space pre-wrap

  .finding, .data-block
    margin 1em 1em 5em 1em
  /*   border-color gray
    border-style dashed none
    border-width 1px */
    
    
  *[data-value=info],*[data-value=low],*[data-value=medium],*[data-value=high]
    text-transform uppercase

  *[data-value=info]
    color $info-color

  *[data-value=low]
    color $low-color

  *[data-value=medium]
    color $medium-color

  *[data-value=high]
    color $high-color

  .error
    color error

  .table-of-contents
    ul
      li
        list-style none
        margin .5em 0 0 0
        a
          color $link-color
          background none
          &:hover
            color $hover-color