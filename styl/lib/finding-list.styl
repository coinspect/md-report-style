.finding-list, div[class^='finding-table']
    table
        min-width 100%
        .field-location, .field-likelihood, .field-impact
            display none
        .field-id
            font-weight bold
            width 5em
            overflow visible
        .field-id,.field-risk
            white-space nowrap
        .field-risk[data-value="Risk"]
            background none
    for $r in $risks
        $color = colorFromRisk($r)
        .field-risk[data-value=\"{$r}\"]
            riskBoxStyle($r)
            
            